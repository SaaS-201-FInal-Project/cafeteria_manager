<!DOCTYPE html>
<html>
  <head>
    <title>CafeteriaManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @current_user %>
        <div class="Navigation-Div">
          <nav class="Navigation">
                <%= image_tag("logo.jpg",class: "Logo-icon") %>
                <%= image_tag("name.png",class: "Logo-name" )%>
                <input class="Navigation-Menu" id="Navigation-Menu" type="checkbox">
                  <label class="Toggle-Button" for="Navigation-Menu">
                    <span class="Navigation-Bar"></span>
                    <span class="Navigation-Bar"></span>
                    <span class="Navigation-Bar"></span>
                  </label>
              <div class="Navigation-Right">
                 <ul class="Navigation-Display">
                 <% if @current_user.role == "owner" %>
                    <li> <%= link_to "Walk-In", cart_path%></li>
                    <li><%= link_to "Orders", orders_path%></li>
                    <li><%= link_to "Menus", menus_path%></li>
                    <div class="Navigation-Dropdown">
                      <li>
                        <button class="Navigation-Button"><%= @current_user.name.first.upcase %><%=@current_user.name%></button>
                      </li>
                        <div class="Navigation-Content">
                           <li><%= link_to "Users", users_path%></li>
                           <li><%= link_to "Reports", reports_path %></li>
                           <li><%= link_to "Sign-out", destroy_session_path,method: "delete" %></li>
                        </div>
                    </div>
                <% elsif @current_user.role == "clerk" %>
                      <li><%= link_to "Home", new_menu_items_home_path%>
                      <li><%= link_to "Walk-In", cart_path%>
                      <li><%= link_to "Orders", orders_path%>
                      <li><%= link_to "Menus", menus_path%>
                      <li><%= link_to "Sign-out", destroy_session_path,method: "delete" %>
                <% else %>
                      <li><%= link_to "Home", new_menu_items_home_path%>
                      <li><%= link_to "Menus", menus_path%></li>
                      <li><%= link_to "Cart", cart_path%></li>
                      <div class="Navigation-Dropdown">
                        <li>
                          <button class="Navigation-Button"><%= @current_user.name.first.upcase %><%=@current_user.name%></button>
                        </li>
                        <div class="Navigation-Content">
                          <li><%= link_to "My Orders", orders_path%></li>
                          <li><%= link_to "Sign-out", destroy_session_path,method: "delete" %></li>
                        </div>
                      </div>
                <% end %>
                </ul>
              </div>
          </nav>
        </div>
    <% end %>
    <% if flash[:error] %>
      <p class="Flash-error"> <%= flash[:error] %> </p>
    <% end %>
    <% if flash[:success] %>
      <p class="Flash-success"> <%= flash[:success] %> </p>
    <% end %>
    <%= yield %>
  </body>
</html>
